{
  "name": "frontend-developer-path",
  "dependencies": {
    "@vitejs/plugin-react": "^3.0.1"
  },
  "devDependencies": {
    "eslint": "^8.31.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "prettier-eslint-cli": "^7.1.0",
    "rimraf": "^3.0.2",
    "run-z": "^1.10.1",
    "vite": "^4.0.4"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "all/*": "run-z ./packages//",
    "start": "run-z ./packages start",
    "dev": "run-z ./packages dev",
    "build": "pnpm build:bundle && pnpm build:packages",
    "build:clean": "run-z clean build",
    "build:bundle": "run-z ./packages build",
    "build:packages": "run-z ./packages// build",
    "clean": "rimraf ./packages/dist",
    "format": "prettier-eslint --write \"packages/**/*.{js,cjs,json,md,html,css}\"",
    "lint": "run-z +z --then eslint ",
    "open:dist": "vite ./packages/dist",
    "preview": "run-z ./packages preview",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.js": [
      "eslint --cache --fix"
    ]
  }
}
